<h1>人氣餐廳</h1>
<hr />

<div class="d-flex row justify-content-center">
  {{#each restaurants}}
  <div class="card col-7 mb-3">
    <div class="row no-gutters">
      <div class="col-auto">
        <img src="{{this.image}}" class="" width="200px" height="180px">
      </div>
      <div class="col">
        <div class="card-block px-2">
          <h4 class="card-title">{{this.name}}</h4>
          <span class="badge badge-secondary">收藏數：{{this.favoriteUsersCount}}</span>
          <p class="card-text">{{this.description}}</p>

          <a href='/restaurants/{{this.id}}'>
            <button class="btn btn-primary">Show</button>
          </a>
          {{#if this.isFavorited }}
          <form action="/favorite/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-danger">移除最愛</button>
          </form>
          {{else}}
          <form action="/favorite/{{this.id}}" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary">加到最愛</button>
          </form>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>